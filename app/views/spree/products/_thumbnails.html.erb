 <ul id="product-thumbnails" class="thumbnails inline" data-hook>
<% if #product.images.size > 1 %>
   	<% product.images.each do |i| %>
     		<li class="tmb-all" id="tmb-<%= i.id.to_s %>"><%= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:large) %></li>
   	<% end %>
<% end %>
   <% if product.has_variants?
     product.variants.each do |v|
       if v.available?
         v.images.each do |i| %>
           <li class="vtmb-<%= v.id.to_s %> vtmb" id="tmb-<%= i.id.to_s %>"><%= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:large) %></li>
         <%
         end
       end
     end
   end
   %>
 </ul>
